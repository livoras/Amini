{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "vendors/rxjs-dist"
  },
  "include": [
    "vendors/rxjs/**/*.ts"
  ]
}

