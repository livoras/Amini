{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"],
      // "@angular/core": ["src/amini/core"],
      // "@angular/forms": ["src/amini/forms"],
      // "@angular/forms/*": ["srcamini/forms/*"],
      // "@core/*": ["src/*"],
      // "@config": ["src/environments/config.dev"],
      // "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es7",
      "dom"
    ],
  },
}
